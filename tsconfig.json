{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom"
        ],
        "jsx": "preserve",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "vite/client",
            "naive-ui/volar"
        ],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "/#/*": [
                "types/*"
            ]
        },
        "plugins": [
            {
                "name": "@vuedx/typescript-plugin-vue"
            }
        ]
    },
    "vueCompilerOptions": {
        "experimentalDisableTemplateSupport": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "build/**/*.ts",
        "build/**/*.d.ts",
        "types/**/*.d.ts",
        "types/**/*.ts",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
